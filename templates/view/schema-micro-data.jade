  //-===============Promote Software Applications in Search Results=============== 
    
  {promote_product}
  div(itemscope='', itemtype='http://schema.org/SoftwareApplication')
   img(itemprop='image', src='[software application icon image url]')
   span(itemprop='name') [name of application]
   |  -
   div(itemprop='author', itemscope='', itemtype='http://schema.org/Organization')
     a(itemprop='url', href='[author url]')
       span(itemprop='name') [developer name]
   div(itemprop='aggregateRating', itemscope='', itemtype='http://schema.org/AggregateRating')
     span(itemprop='ratingValue') [rating given]
     | /
     span(itemprop='bestRating') [highest possible rating]
     |  stars from
     span(itemprop='ratingCount') [total number of ratings]
     |  users.
   div(itemprop='offers', itemscope='', itemtype='http://schema.org/Offer')
     span(itemprop='price') [price]
   span(itemprop='description') [description of application]
   a(itemprop='downloadURL', href='[download url]') Download
   time(itemprop='datePublished', datetime='[date in ISO format e.g. 2012-04-15]') [publication date]
   span(itemprop='operatingSystems') [supported operating systems]
   span(itemprop='applicationCategory') [category]
   meta(itemprop='fileSize', content='[file size e.g. 14MB]')
   meta(itemprop='interactionCount', content='[number of downloads] UserDownloads')
  script(type='application/ld+json').
   {
   "@context": "http://schema.org",
   "@type": "SoftwareApplication",
   "image": "[software application icon image url]",
   "name": "[name of the software application]",
   "author": {
   "@type": "Organization",
   "url": "[author url]",
   "name": "[developer name]"
   },
   "aggregateRating": {
   "@type" : "AggregateRating",
   "ratingValue" : "[rating given]",
   "bestRating" : "[highest possible rating]",
   "ratingCount" : "[total number of ratings]"
   },
   "datePublished": "[date in ISO format e.g. 2012-04-15]",
   "fileSize" : "[file size e.g. 14mb]",
   "interactionCount" : "[number of user downloads]",
   "contentRating" : "[content rating e.g. Low Maturity]",
   "description" : "[description of the software application]",
   "downloadURL" : "[download url]"
   "operatingSystem" : [
   "[operating system 1]",
   "[operating system 2]"
   ],
   "applicationCategory" : "[application category e.g. http://schema.org/GameApplication]",
   "Offers": {
   "@type" : "Offer",
   "price" : "[app price]"
   }
   }{/}

  //-==========Generate Rich Media Listings with Video Mark-up================= 
  {Video_block}
  div(itemprop='video', itemscope='', itemtype='http://schema.org/VideoObject')
   span(itemprop='name') [name of video]
   meta(itemprop='duration', content='[duration in ISO format e.g. T1M33S]')
   meta(itemprop='thumbnail', content='[thumbnail-url]')
   span(itemprop='description') [description of video]
  script(type='application/ld+json').
