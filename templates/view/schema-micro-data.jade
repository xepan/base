   "@type" : "VideoObject",
   "name" : "[name of video]",
   "duration" : "[duration in ISO format e.g. T1M33S]",
   "thumbnail" : "[thumbnail url]",
   "description" : "[description of video]"
   }
  {/}

  //-==========Logo & Social Sitelinks in Knowledge Graph============
  {social_block}
  div(itemscope='', itemtype='http://schema.org/Organization')
   span(itemprop='name') [organization name]
   img(src='[logo image url]', itemprop='logo')
   a(href='[website url]') Website
   | Follow us on 
   a(href='[profile url]', itemprop='sameAs') Twitter
   | , 
   a(href='[profile url]', itemprop='sameAs')
    | Facebook, 
    a(href='[profile url]', itemprop='sameAs')
      | Google+ and 
      a(href='[profile url]', itemprop='sameAs') LinkedIn
      | .
  script(type='application/ld+json').
   { "@context" : "http://schema.org",
   "@type" : "Organization",
   "name" : "[organization name]",
   "logo" : "[logo image url]",
   "url" : "[website url]",
   "sameAs" : [
   "https://twitter.com/[username]",
   "https://www.facebook.com/[username]",
   "https://www.linkedin.com/company/[username]",
   "https://plus.google.com/[username]/posts"
   ]
   }
  {/}

  //- ========SearchAction – Sitelinks Search Box===================

  {SearchAction}
  div(itemscope='', itemtype='http://schema.org/WebSite')
   meta(itemprop='url', content='[website url]')
   form(itemprop='potentialAction', itemscope='', itemtype='http://schema.org/SearchAction')
     meta(itemprop='target', content='[website search url]={search_term}')
     input(itemprop='query-input', type='text', name='search_term')
     input(type='submit')
  script(type='application/ld+json').
   { "@context": "http://schema.org",
   "@type": "WebSite",
   "url": "[website url]",
   "potentialAction": {
   "@type": "SearchAction",
   "target": "[website search url]={search_term}",
   "query-input": "required name=search_term"
   }
   }
  {/}	

  //-==================== InDepth Article Markup============
  
  {article_block}
  div(itemscope='', itemtype='http://schema.org/Article')
   h1(itemprop='headline') [article headline]
   h2(itemprop='alternativeHeadline') [alternative headline]
   img(src='[main article image url]', itemprop='image')
   span(itemprop='author') [author name]
   span(itemprop='datePublished') [publication date in ISO format e.g. 2014-03-16]
   span(itemprop='description') [article summary]
   div(itemprop='articleBody')
     | [article content]
  script(type='application/ld+json').
   { "@context": "http://schema.org",
   "@type": "Article",
   "headline": "[article title]",
   "alternativeHeadline": "[article sub heading]",
   "image": "[main article image url]",
   "author": "[author name]",
   "datePublished": "[date in ISO format e.g. 2014-03-16]",
   "description": "[article summary]"
   }
  {/}

